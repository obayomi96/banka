{
  "name": "banka",
  "version": "1.0.0",
  "description": "A light-weight core banking application",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test npm run migrations && nyc --reporter=lcov --reporter=text mocha --require @babel/polyfill --require @babel/register server/tests/*.spec.js --timeout 10000 --exit",
    "coverage": "npm run test && nyc report --reporter=text-lcov | coveralls",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "nyc": "nyc --reporter=lcov npm run test && nyc report --reporter=text-lcov | coveralls",
    "start": "node dist/index.js",
    "postinstall": "npm run build",
    "start-dev": "nodemon --exec babel-node --presets=@babel/env server/index.js",
    "migrations": "cross-env NODE_ENV=test babel-node server/migrations/createTables",
    "build": "rm -rf ./dist && babel server --out-dir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obayomi96/banka.git"
  },
  "keywords": [
    "andela",
    "banka",
    "nodejs",
    "express",
    "api",
    "endpoint"
  ],
  "author": "Martins Obayomi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/obayomi96/banka/issues"
  },
  "homepage": "https://github.com/obayomi96/banka#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "multer": "^1.4.1",
    "nodemon": "^1.18.10",
    "nyc": "^14.0.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-literals": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/plugin-transform-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.1.5",
    "babel-plugin-istanbul": "^5.1.0",
    "@babel/polyfill": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "cuid": "^2.1.6",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "pg": "^7.10.0",
    "uuid": "^3.3.2"
  }
}
